{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2022", "dom"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src", "types"],
  "exclude": ["dist"]
}
